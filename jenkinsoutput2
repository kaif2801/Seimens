pipeline {
    agent any
    stages{
        stage("Clone Repository"){
            steps{
                git 'https://github.com/kaif2801/Seimens.git'
            }
        }
        
        
        
        stage("TF Init"){
            steps{
                sh 'terraform init'
            }
        }
        stage("TF Validate"){
            steps{
                echo "Validating Terraform Code"
            }
        }
        stage("TF Plan"){
            steps{
                sh 'terraform plan-out=tfplan'
            }
        }
        stage("TF Apply"){
            steps{
                sh 'terraform apply-auto-approve tfplan'
            }
        }

        stage("Invoke Lambda"){
            steps{
                sh 'aws lambda inkove--function-name aws_lambda_function--log-type Tail output.txt'
                sh 'cat output.txt'
            }
        }
        
}
}